<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   width="1075" minWidth="955" minHeight="600" trackingRight="3">
	<fx:Declarations>
 
	
			
		
	
		
	</fx:Declarations>

	<fx:Style>
	
	
	</fx:Style>
	
	

	
	
	<mx:ComboBox x="640" y="31" width="130" height="27" dataProvider="{styledata}"
				 dropdownWidth="250" fontSize="11" fontWeight="bold" rowCount="10" 
				 selectionColor="#FFFFFF" textSelectedColor="#0012FF" rollOverColor="#E7CF00"  />

	<mx:ViewStack id="styledata" x="644" y="109" width="126">
		
		<mx:VBox label="Общий"
				 icon="@Embed('ui/pict_styledata/all.png')"
				
				 backgroundColor="white"
				 width="480"
				 height="32">
			
		</mx:VBox>
		
		<mx:VBox label="Числовой"
				 icon="@Embed('ui/pict_styledata/number.png')"
				 backgroundColor="white"
				 width="480"
				 height="60">
			
		</mx:VBox>
		
		<mx:VBox label="Денежный"
				 icon="@Embed('ui/pict_styledata/money.png')"
				 backgroundColor="white"
				 width="101"
				 height="60">
			
		</mx:VBox>
		
		<mx:VBox label="Финансовый"
				 icon="@Embed('ui/pict_styledata/finance.png')"
				 backgroundColor="white"
				 width="480"
				 height="60">
			
		</mx:VBox>
		
		<mx:VBox label="Краткая дата"
				 icon="@Embed('ui/pict_styledata/short_date.png')"
				 backgroundColor="white"
				 width="480"
				 height="60">
			
		</mx:VBox>
		
		<mx:VBox label="Длинный формат даты"
				 icon="@Embed('ui/pict_styledata/long_date.png')"
				 backgroundColor="white"
				 width="480"
				 height="60">
			
		</mx:VBox>
		
		<mx:VBox label="Время"
				 icon="@Embed('ui/pict_styledata/time.png')"
				 backgroundColor="white"
				 width="480"
				 height="60">
			
		</mx:VBox>
		
		<mx:VBox label="Процентный"
				 icon="@Embed('ui/pict_styledata/percent.png')"
				 backgroundColor="white"
				 width="480"
				 height="60">
			
		</mx:VBox>
		
		<mx:VBox label="Дробный"
				 icon="@Embed('ui/pict_styledata/double.png')"
				 backgroundColor="white"
				 width="480"
				 height="60">
			
		</mx:VBox>
		
		<mx:VBox label="Экспоненциальный"
				 icon="@Embed('ui/pict_styledata/exponential.png')"
				 backgroundColor="white"
				 width="480"
				 height="60">
			
		</mx:VBox>
		
		<mx:VBox label="Текстовый"
				 icon="@Embed('ui/pict_styledata/text.png')"
				 backgroundColor="white"
				 width="480"
				 height="60">
			
		</mx:VBox>
		
		<mx:VBox label="Другие числовые форматы.."
				 
				 backgroundColor="white"
				 width="480"
				 height="60">
			
		</mx:VBox>
		
	</mx:ViewStack>
	
	
	
	
	
	
	<s:SkinnableContainer x="690" y="494" width="290" height="27" backgroundColor="#7FA3D3"
						  color="#DD1414" styleName="cont_zoom"  >
		<mx:Button x="14" y="5" width="56" height="22" label="{Math.round(slider_zoom.value)}%"
				   color="#0548A2"
				   fontSize="11"
				   downSkin="@Embed('ui/pict_zoom/percent3.png')" 
				   fontWeight="bold" 
				   overSkin="@Embed('ui/pict_zoom/percent2.png')"
				   upSkin="@Embed('ui/pict_zoom/percent1.png')"/>
		
		<mx:Button x="75" y="8" width="17" height="17" label="" click="{slider_zoom.value-=10}"
				   fontSize="10"
				   downSkin="@Embed('ui/pict_zoom/zoomdown3.png')" 
				   overSkin="@Embed('ui/pict_zoom/zoomdown2.png')"
				   upSkin="@Embed('ui/pict_zoom/zoomdown1.png')"/>
		
		<s:HSlider id="slider_zoom" x="109" y="10" width="151" height="10" liveDragging="true"
				   maximum="400" minimum="10" snapInterval="1" value="100" />
		
		
		<mx:Button x="267" y="8" width="17" height="17" label=""
				   click="{slider_zoom.value+=10}" 
				   fontSize="9"
				   downSkin="@Embed('ui/pict_zoom/zoomup3.png')"
				   overSkin="@Embed('ui/pict_zoom/zoomup2.png')"
				   upSkin="@Embed('ui/pict_zoom/zoomup1.png')"/>
		
	</s:SkinnableContainer>
	

	

		
		
		

	
	
	
	

	
	
	
	
	
	
	
	
	
